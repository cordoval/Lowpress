{% extends '::base.html.twig' %}
{% block body %}
  <div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
        <a class="brand" href="{{ lowpress_get_option('home') }}">{{ lowpress_bloginfo('name') }}</a>
        <div class="nav-collapse">
          <ul class="nav">
            <li>
              <a href="{{ lowpress_get_option('home') }}">Blog</a>
            </li>
            <li>
              <a href="{{ path('LowpressTestBundle_homepage') }}">Symfony Page</a>
            </li>
            <li>
              <a href="/wordpress-page/">Wordpress Page</a>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <div class="span8">
        {% block content %}{% endblock %}
      </div>
      <div class="span4">
        <div class="well">
          {% block sidebar %}{{ lowpress_get_sidebar() }}{% endblock %}
        </div>
      </div>
    </div>
  </div>
{% endblock %}